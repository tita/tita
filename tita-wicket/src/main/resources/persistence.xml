<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="titaDataSource" transaction-type="RESOURCE_LOCAL">
    <!-- Add Classes that are ment to be persisted here -->
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>at.ac.tuwien.ifs.tita.useradministration.domain.User</class>
    <class>at.ac.tuwien.ifs.tita.useradministration.domain.Role</class>
    <class>at.ac.tuwien.ifs.tita.timeeffort.domain.TimeEffort</class>
    
    <properties>
      <property name="hibernate.archive.autodetection" value="class, hbm" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
    </properties>
  </persistence-unit>
</persistence>